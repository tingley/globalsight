--  This function return a string to discribe the time clearance between first parameter and the other one.
--  If each of the parameters a null, return blank string.
--  If the first parameter is earlier than the second one return blank string.
--  If the first parameter is later than the second one, return the clearance time.
DROP FUNCTION IF EXISTS DATE_DIFF;
DELIMITER //
CREATE FUNCTION DATE_DIFF (P_DATE1 TIMESTAMP, P_DATE2 TIMESTAMP)
RETURNS VARCHAR(100)
BEGIN
  DECLARE V_DAYS INT DEFAULT 0; --  THE VALUE OF EACH TYPE ARE INTEGER.
  DECLARE V_HRS INT DEFAULT 0;
  DECLARE V_MIN INT DEFAULT 0;
  DECLARE V_SEC INT DEFAULT 0; --  NEVER BEEN USED. THIS IS USED TO STORE SECOND VALUE.
  DECLARE V_RET VARCHAR(100) DEFAULT '';

  --  If each of them is null, return blank string
  IF P_DATE1 = NULL OR P_DATE2 = NULL
     THEN RETURN '' ;
  END IF ;

  SELECT TIMESTAMPDIFF(DAY, P_DATE1, P_DATE2) INTO V_DAYS;
  SELECT TIMESTAMPDIFF(HOUR, P_DATE1, P_DATE2) INTO V_HRS;
  SELECT TIMESTAMPDIFF(MINUTE, P_DATE1, P_DATE2) INTO V_MIN;

  IF V_DAYS > 0
    THEN   SELECT CONCAT(V_DAYS, ' DAYS ') INTO V_RET;
  END IF;
  IF V_HRS > 0
    THEN   SELECT CONCAT(V_RET, V_HRS, ' HOURS ') INTO V_RET;
  END IF ;
  IF V_MIN > 0
    THEN   SELECT CONCAT(V_RET, V_MIN, ' MINUTES ') INTO V_RET;
  END IF ;

  RETURN  V_RET;
END;
//
DELIMITER ;
