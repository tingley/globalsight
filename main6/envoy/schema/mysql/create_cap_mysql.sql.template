    AUTO_INCREMENT
    PRIMARY KEY,
  NAME VARCHAR(40)
    NOT NULL,
  DISPLAY_NAME VARCHAR(40)
    NOT NULL,
  COMPANY_ID BIGINT
    NOT NULL,
